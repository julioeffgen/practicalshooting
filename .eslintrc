{
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "plugins": [
    "meteor",
    "import",
    "react",
    "jsx-a11y"
  ],

  "env": {
    "browser": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "react/require-extension": "off",
    "import/prefer-default-export": "off"
  },
  "settings": {
    "import/resolver": "meteor",
    "import/core-modules": [ "meteor/meteor", "meteor/mongo", "meteor/random", "meteor/check", "meteor/practicalmeteor:chai", "meteor/hwillson:stub-collections" ]
  }
}